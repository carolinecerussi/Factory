
@{
  Layout = "_Layout";
}

@using Factory.Models
@using System.ComponentModel.DataAnnotations;

@model List<Factory.Models.Machine>

<h1>Machines</h1>




@if (@Model.Count == 0)
{
  <h4>No Machines listed! Click <a>@Html.ActionLink("here", "Create")</a> to add a new machine.
	</h4>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MName}", "Details", new { id = machine.MId })</li>
}
