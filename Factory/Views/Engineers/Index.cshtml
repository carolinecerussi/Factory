
@{
  Layout = "_Layout";
}

@using Factory.Models
@using System.ComponentModel.DataAnnotations;
@model List<Factory.Models.Engineer>


<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No Engineers listed! Click <a>@Html.ActionLink("here", "Create")</a> to add a new engineer.
	</h3>
} 

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EName}", "Details", new { id = engineer.EId })</li>
}
